<h1>DibbyNote Store</h1>

<%= link_to "Home", root_path %>

<nav>
  <p>Filter Instrument</p>

  <ul>
    <li>
      <%= link_to "All", instruments_path, class: "button" %>
    </li>

    <li>
      <%= link_to "Last Updated", instruments_path(instrument_filter: "Last-Updated"), class: "button" %>
    </li>

    <li>
      <%= link_to "New", instruments_path(instrument_filter: "New-Instrument"), class: "button" %>
    </li>
  </ul>
</nav>

<%= paginate @instruments %>

<ul>
  <% @instruments.each do | instrument |%>
    <li>
      <p>
        <%= link_to instrument.name, instrument %>
      </p>

      <% if instrument.image.present? %>
        <%= image_tag instrument.image, alt: instrument.name %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @instruments %>