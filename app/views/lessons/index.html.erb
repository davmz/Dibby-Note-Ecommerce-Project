<h1>DibbyNote Lessons</h1>

<%= link_to "Home", root_path %>

<nav>
  <p>Filter Lessons</p>

  <ul>
    <li>
      <%= link_to "All", instruments_path, class: "button" %>
    </li>

    <li>
      <%= link_to "Last Updated", instruments_path(lesson_filter: "Last-Updated"), class: "button" %>
    </li>

    <li>
      <%= link_to "New", instruments_path(lesson_filter: "New-Lesson"), class: "button" %>
    </li>
  </ul>
</nav>

<%= paginate @lessons %>

<ul>
  <% @lessons.each do | lesson |%>
    <li>
      <p>
        <%= link_to lesson.instrument.name, lesson %>
      </p>

      <% if lesson.instrument.image.present? %>
        <%= image_tag lesson.instrument.image, alt: lesson.instrument.name %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= paginate @lessons %>

<%= link_to "Home", root_path %>