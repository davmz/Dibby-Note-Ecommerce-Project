<nav>
  <%= link_to "Dibby Note", root_path %>

  <ul>
    <% if user_signed_in? %>
      Logged in as <strong><%= current_user.email %></strong>

      <li>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
      </li>

      <li>
        <%= link_to "Edit Account", edit_user_registration_path %>
      </li>
    <% else %>
      <li>
        <%= link_to "Sign Up", new_user_registration_path %>
      </li>

      <li>
        <%= link_to "Sign In", new_user_session_path %>
      </li>
    <% end %>

    <div>
      <% dibby_pages.each do | page | %>
        <li>
          <%= link_to page.title, permalink_path(page.permalink) %>
        </li>
      <% end %>
    </div>
  </ul>

  <div class="navbar-end">
    <%= form_with(url: search_path, method: :get, local: true, class: "navbar-item") do  %>
      <div class="field is-grouped">
        <div class="control is-expanded" style="width: 350px">
          <%= text_field_tag(:keywords, nil, class: "input is-rounded", placeholder: "Search for Instrument") %>
        </div>

        <div class="select mr-4">
          <%= collection_select :type, :id, Type.all.order("id ASC"), :id, :name, { :prompt => true } %>
        </div>

        <div class="control">
          <%= submit_tag("Search", class: "button is-primary") %>
        </div>
      </div>
    <% end %>
  </div>
</nav>